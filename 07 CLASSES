CLASS employee DEFINITION.
  PUBLIC SECTION.
    TYPES: BEGIN OF ty_employee,
             employee_id TYPE string,
             name TYPE string,
             department TYPE string,
           END OF ty_employee.

    METHODS: constructor IMPORTING iv_employee_id TYPE string iv_name TYPE string iv_department TYPE string,
             create_employee IMPORTING iv_employee_data TYPE ty_employee,
             find_employee IMPORTING iv_employee_id TYPE string
                             EXPORTING ev_employee_data TYPE ty_employee.

  PRIVATE SECTION.
    DATA: mt_employee_data TYPE TABLE OF ty_employee.

ENDCLASS.

CLASS employee IMPLEMENTATION.
  METHOD constructor.
    " Constructor: Inicializa a tabela interna
    CLEAR mt_employee_data.
  ENDMETHOD.

  METHOD create_employee.
    " Método para cadastrar um novo empregado
    APPEND iv_employee_data TO mt_employee_data.
  ENDMETHOD.

  METHOD find_employee.
    " Método para consultar um empregado pelo ID
    DATA: ls_employee TYPE ty_employee.

    READ TABLE mt_employee_data INTO ls_employee WITH KEY employee_id = iv_employee_id.
    IF sy-subrc = 0.
      " Se o empregado for encontrado, copia os dados para a estrutura de retorno
      ev_employee_data = ls_employee.
    ENDIF.
  ENDMETHOD.

ENDCLASS.
