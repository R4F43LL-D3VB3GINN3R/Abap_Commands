TABLES: VBAK, VBAP.

DATA: LT_RESULTADO TYPE TABLE OF VBAP.

SELECT VBAK~VBELN, VBAP~POSNR
  FROM VBAK
  INNER JOIN VBAP
    ON VBAK~VBELN = VBAP~VBELN
  INTO TABLE @LT_RESULTADO.

LOOP AT LT_RESULTADO INTO DATA(LS_RESULTADO).
  WRITE: / 'VBELN:', LS_RESULTADO-VBELN,
           'POSNR:', LS_RESULTADO-POSNR.
ENDLOOP.

------------------------------------------------
