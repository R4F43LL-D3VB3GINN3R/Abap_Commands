      LV_CHAR TYPE C LENGTH 30, "Character Variable with length specified"
      LV_AGE   TYPE I, "Integer Variable"
      LV_COUNT TYPE I VALUE 0, "Integer Variable With Value 0"
      LV_MONEY TYPE P DECIMALS 2, "Float Variable with lenght specified"
      LV_FLOAT TYPE F, "Float Variable without specification"
      LV_FLAG  TYPE ABAP_BOOL, "Boolean Variable"
      LV_BOOL TYPE ABAP_BOOL VALUE ABAP_TRUE, "Boolean Variable with flag specified"
      LV_DATE TYPE D VALUE '20230818', "Date Variable"
      LV_HOUR TYPE T VALUE '19:28:00', "Hour Variable"
      LT_TABLE TYPE TABLE OF STRING, "Internal Table of Character"
      LS_STRUC TYPE LT_TABLE, "Structure based on the previous Internal Table"
      LR_OBJECT TYPE REF TO CL_ABAP_OBJECT "CL_ABAP_OBJECT is a previously class defined"
